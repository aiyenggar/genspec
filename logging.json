{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        },
        "filename": {
            "format": "%(name)s - %(message)s"
        },
        "plain": {
            "format": "%(message)s"
        }
    },

    "handlers": {
        "consoleHandler": {
            "class": "logging.StreamHandler",
            "level": 25,
            "formatter": "plain",
            "stream": "ext://sys.stdout"
        },

        "infoHandler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "plain",
            "filename": "info.log",
            "maxBytes": 16777216,
            "backupCount": 20,
            "encoding": "utf8"
        },

        "debugHandler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filename": "debug.log",
            "maxBytes": 16777216,
            "backupCount": 20,
            "encoding": "utf8"
        },

        "errorHandler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "simple",
            "filename": "error.log",
            "maxBytes": 16777216,
            "backupCount": 20,
            "encoding": "utf8"
        }
    },

    "loggers": {
        "test": {
            "level": "ERROR",
            "handlers": [],
            "propagate": "yes"
        }
    },

    "root": {
        "level": "DEBUG",
        "handlers": ["consoleHandler", "infoHandler", "debugHandler", "errorHandler"]
    }
}